@page
@model AllCrimesModel
@{
  ViewData["Title"] = "List of All Crime Codes";
}

<h2>List of All Crime Codes </h2>  

<br />
Total Number of Crime Codes:  @Model.totalCrimes
<br />

@{
   if (@Model.EX != null)
	 {
	   <br />
		 <br />
		 <h3>**ERROR: @Model.EX.Message</h3>
		 <br />
		 <hr />
		 <br />
		 <br />
	 }
}

<table class="table">  
    <thead>  
        <tr>   
            <th>  
                IUCR
            </th>  
            <th>  
                PrimaryDesc 
            </th>  
            <th>  
                SecondaryDesc
            </th>  
            <th>  
                numCrimes
            </th>  
        </tr>  
    </thead>  
    <tbody>  

				
        @foreach (var item in Model.CrimeCodeList)  
        {  
            <tr>   
                <td>  
                    @item.IUCR
                </td>  
                <td>  
                    @item.PrimaryDesc
                </td>  
                <td>  
                    @item.SecondaryDesc
                </td>  
                <td>  
                    @item.numCrimes
                </td>  
            </tr>  
						
        }  
    </tbody>  
</table> 